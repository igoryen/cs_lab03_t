@model IEnumerable<myAppMemory.ViewModels.StudentPublic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {  
    <tr>
        <td>
            @item.StudentId
        </td>
        <td>
            @item.FirstName
        </td>
        <td>
            @item.LastName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentNumber }) |
            @Html.ActionLink("Details", "Details", new { id = item.StudentNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentNumber })
        </td>
    </tr>
}

</table>
